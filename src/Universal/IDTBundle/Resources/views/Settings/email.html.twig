{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    Email settings
{% endblock subtitle %}

{% block content %}
    <div class="content-container clearfix">
        <div class="main-content clearfix"><!-- MAIN CONTENT -->
            <h2 class="section-title">Email Settings</h2>
            <div class="user-panel clearfix"><!-- USER PANEL -->
                <ul class="nav nav-tabs"><!-- TAB LIST -->
                    <li><a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-user"></i> Profile settings</a></li>
                    <li class="active"><a href="{{ path('user_profile_email') }}"><i class="fa fa-envelope"></i> Email Settings</a></li>
                    <li><a href="{{ path('fos_user_change_password') }}"><i class="fa fa-key"></i> Password Settings</a></li>
                    <li><a href="{{ path('user_profile_notification') }}"><i class="fa fa-exclamation-circle"></i> Notifications</a></li>
                </ul>
                <div class="tab-content clearfix">
                    <div class="tab-pane active">
                        <div class="current-email-address clearfix">
                            <p>Your current email is <strong>{{ email }}</strong></p>
                        </div>
                        {{ form_start(form, {'attr': {'class': 'email-setting-form form-horizontal'}}) }}
                            <div class="form-group">
                                {{ form_label(form.newEmail, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                        {{ form_widget(form.newEmail, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.newEmail) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.current_password, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.current_password) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_errors(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}