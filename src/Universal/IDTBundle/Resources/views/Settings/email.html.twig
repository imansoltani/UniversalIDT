{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    Email settings|trans
{% endblock subtitle %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget stacked">

                <div class="widget-header">
                    <i class="icon-user"></i>

                    <h3>Email settings</h3>
                </div>
                <!-- /widget-header -->

                <div class="widget-content">
                    <div class="tabbable">

                        <ul class="nav nav-tabs">
                            <li><a href="{{ path('fos_user_profile_edit') }}">Profile settings</a></li>
                            <li class="active"><a href="{{ path('user_profile_email') }}">Email Settings</a></li>
                            <li><a href="{{ path('fos_user_change_password') }}">Password Settings</a></li>
                            <li><a href="{{ path('user_profile_notification') }}">Notifications</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="col-md-7" style="font-weight: bold;">Your current email is {{ email }}</div>
                                {{ form_start(form, {'attr': {'class': 'form-horizontal col-md-7'}}) }}
                                <fieldset>
                                    <div class="form-group">
                                        {{ form_label(form.newEmail, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                                        <div class="col-lg-8">
                                            {{ form_widget(form.newEmail, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.newEmail) }}
                                        </div> <!-- /col-lg-8 -->
                                    </div> <!-- /form-group -->

                                    <div class="form-group">
                                        {{ form_label(form.current_password, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                                        <div class="col-lg-8">
                                            {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.current_password) }}
                                        </div> <!-- /col-lg-8 -->
                                    </div> <!-- /form-group -->

                                    <div class="form-group">
                                        <div class="col-lg-4"></div>

                                        <div class="col-lg-8">
                                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                        </div>
                                    </div>
                                    <!-- /form-actions -->
                                </fieldset>
                                {{ form_errors(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /widget-content -->
            </div>
            <!-- /widget -->
        </div>
    </div>
{% endblock %}