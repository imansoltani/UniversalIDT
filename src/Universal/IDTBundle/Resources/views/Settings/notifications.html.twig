{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    {{ 'settings.notifications.title'|trans({},'application') }}
{% endblock subtitle %}

{% block content %}
    <div class="content-container clearfix">
        <div class="main-content clearfix"><!-- MAIN CONTENT -->
            <h2 class="section-title">{{ 'settings.notifications.subtitle'|trans({},'application') }}</h2>
            <div class="user-panel clearfix"><!-- USER PANEL -->
                <ul class="nav nav-tabs"><!-- TAB LIST -->
                    <li><a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-user"></i> {{ 'settings.profile.subtitle'|trans({},'application') }}</a></li>
                    <li><a href="{{ path('user_profile_email') }}"><i class="fa fa-envelope"></i> {{ 'settings.email.subtitle'|trans({},'application') }}</a></li>
                    <li><a href="{{ path('fos_user_change_password') }}"><i class="fa fa-key"></i> {{ 'settings.password.subtitle'|trans({},'application') }}</a></li>
                    <li class="active"><a href="{{ path('user_profile_notification') }}"><i class="fa fa-exclamation-circle"></i> {{ 'settings.notifications.subtitle'|trans({},'application') }}</a></li>
                </ul>
                <div class="tab-content clearfix">
                    <div class="tab-pane active">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal notification-setting-form'}}) }}
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>{{ form_label(form.notifications) }}</label>
                                </div>
                                <div class="col-md-9">
                                    {% for notify in form.notifications %}
                                    <div class="checkbox">
                                        <label>
                                            {{ form_widget(notify) }}
                                            <span>{{ form_label(notify) }}</span>
                                            {{ form_errors(notify) }}
                                        </label>
                                    </div>
                                    {% endfor %}
                                    {{ form_errors(form.notifications) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                </div>
                            </div>
                        {{ form_errors(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}