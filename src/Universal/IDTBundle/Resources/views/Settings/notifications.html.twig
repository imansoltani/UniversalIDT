{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    Notifications|trans
{% endblock subtitle %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget stacked">

                <div class="widget-header">
                    <i class="icon-user"></i>

                    <h3>Notifications</h3>
                </div>
                <!-- /widget-header -->

                <div class="widget-content">
                    <div class="tabbable">

                        <ul class="nav nav-tabs">
                            <li><a href="{{ path('fos_user_profile_edit') }}">Profile settings</a></li>
                            <li><a href="{{ path('fos_user_change_password') }}">Password Settings</a></li>
                            <li class="active"><a href="{{ path('user_profile_notification') }}">Notifications</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active">
                                {{ form_start(form, {'attr': {'class': 'form-horizontal col-md-7'}}) }}
                                <fieldset>
                                    <div class="form-group">
                                        <div class="col-lg-4">
                                            <p class="help-block">{{ form_label(form.notifications) }}</p>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="row">
                                                {% for notify in form.notifications %}
                                                    <div class="col-sm-6">
                                                        <div class="checkbox">
                                                            <label>
                                                                {{ form_widget(notify) }}
                                                                {{ form_label(notify) }}
                                                                {{ form_errors(notify) }}
                                                            </label>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                                {{ form_errors(form.notifications) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-4"></div>

                                        <div class="col-lg-8">
                                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                        </div>
                                    </div>
                                    <!-- /form-actions -->
                                </fieldset>
                                {{ form_errors(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /widget-content -->
            </div>
            <!-- /widget -->
        </div>
    </div>
{% endblock %}