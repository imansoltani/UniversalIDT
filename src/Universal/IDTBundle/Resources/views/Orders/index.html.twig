{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    Orders|trans
{% endblock subtitle %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/universalidt/dataTable/css/jquery.dataTables.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/universalidt/js/plugins/msgbox/jquery.msgbox.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-book"></i>
                <h3>Orders</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">
                <table id="table" class="display" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Date, Time</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Amount</th>
                        <th>Action</th>
                    </tr>
                    </thead>

                    <tfoot>
                    <tr>
                        <th>Date, Time</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Amount</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>

                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.date|date('Y-m-d H:i:s') }}</td>
                            <td></td>
                            <td></td>
                            <td>{{ order.amount }} ({{ order.currency|upper }})</td>
                            <td><a href="{{ path('user_order_details', {'id':order.id}) }}">details</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /widget-content -->

        </div>
        <!-- /widget -->
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bundles/universalidt/js/plugins/msgbox/jquery.msgbox.min.js") }}"></script>
    <script src="{{ asset("bundles/universalidt/dataTable/js/jquery.dataTables.min.js") }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table').DataTable();

            $('#table').find('tbody').on('click', 'tr', function () {
                $.msgbox("sdfsdf sdf", {type: "info"});
            });
        });
    </script>
{% endblock javascripts %}

