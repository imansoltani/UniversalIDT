{% extends "::base.html.twig" %}

{% block title %}UniversalIDTBundle:Guest:rates{% endblock %}

{% block body %}
    <h1>Welcome to the Guest:rates page</h1>

    {{ form(form) }}

    <table border="1">
        <thead>
        <tr>
            <th rowspan="2">Calling Cards</th>
            <th rowspan="2">Denominations</th>
            <th colspan="3">Toll Free</th>
            <th colspan="3">Local Access</th>
            <th colspan="3">Internet</th>
            <th rowspan="2">Action</th>
        </tr>
        <tr>
            <th>Rate</th>
            <th>Conn. fee</th>
            <th>Min</th>
            <th>Rate</th>
            <th>Conn. fee</th>
            <th>Min</th>
            <th>Rate</th>
            <th>Conn. fee</th>
            <th>Min</th>
        </tr>
        </thead>
        <tbody>
        {% for row in result %}
            <tr>
                <td>{{ row.product.name }}</td>
                <td>{{ row.product.denominations|join(';') }}</td>
                <td>{{ row.rate.tol }}</td>
                <td></td>
                <td></td>
                <td>{{ row.rate.lac }}</td>
                <td></td>
                <td></td>
                <td>{{ row.rate.net }}</td>
                <td></td>
                <td></td>
                <td>AddToCard</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">No Data</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
