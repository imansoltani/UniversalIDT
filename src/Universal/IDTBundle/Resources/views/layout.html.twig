{% extends 'base.html.twig' %}

{% block title %}{% block subtitle '' %} :: Universal IDT{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/universalidt/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/universalidt/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">
    <link href="{{ asset('bundles/universalidt/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/universalidt/css/base-admin-3.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/universalidt/css/base-admin-3-responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/universalidt/css/custom.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/universalidt/css/pages/dashboard.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
<nav class="navbar navbar-inverse" role="navigation">

    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <i class="icon-cog"></i>
            </button>
            <a class="navbar-brand" href="{{ path('WebPage_main') }}">
                Universal IDT
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('en_US__RG__WebPage_main')~'#basket' }}" data-toggle="target"><i class="icon-shopping-cart"></i> Cart(<span id="cart_total_items">-</span>)</a></li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="dropdown">
                        <a href="javascript:" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-user"></i> {{ app.user.firstName }}<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_show') }}">{{ 'Settings'|trans({},'FOSUserBundle') }}</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({},'FOSUserBundle') }}</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                    <li class="dropdown">
                        <a href="javascript:" class="dropdown-toggle" data-toggle="dropdown">Language<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            {% for name, iso in languages %}
                                <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale':iso})) }}">{{ name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div> <!-- /.container -->
</nav>

<div class="subnavbar">
    <div class="subnavbar-inner">
        <div class="container">
            {% include '@UniversalIDT/navBar.html.twig' %}
        </div> <!-- /container -->
    </div> <!-- /subnavbar-inner -->
</div> <!-- /subnavbar -->

<div class="main">
    <div class="container">
        <div class="breadcrumbs">
            {{ wo_render_breadcrumbs() }}
        </div> <!-- /subnavbar -->

        {#{% block flashes %}#}
        {#<div class="alert alert-{{type}}">{{ message }}</div>#}
        {#{% endblock %}#}

        {% block content '' %}
    </div> <!-- /container -->
</div> <!-- /main -->

    <div class="extra">
        <div class="container">
            {% include '@UniversalIDT/extra.html.twig' %}
        </div> <!-- /container -->
    </div> <!-- /extra -->

    <div class="footer">
        <div class="container">
            <div class="row">
                <div id="footer-copyright" class="col-lg-6">
                    &copy; 2012-13 Jumpstart UI.
                </div> <!-- /span6 -->
                <div id="footer-terms" class="col-lg-6">
                    Theme by <a href="http://jumpstartui.com" target="_blank">Jumpstart UI</a>
                </div> <!-- /.span6 -->
            </div> <!-- /row -->
        </div> <!-- /container -->
    </div> <!-- /footer -->

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset("bundles/universalidt/js/jquery-1.9.1.min.js") }}"></script>
    <script src="{{ asset("bundles/universalidt/js/jquery-ui-1.10.0.custom.min.js") }}"></script>
    <script src="{{ asset("bundles/universalidt/js/bootstrap.min.js") }}"></script>
    <script src="{{ asset("bundles/universalidt/js/Application.js") }}"></script>
{% endblock javascripts %}
