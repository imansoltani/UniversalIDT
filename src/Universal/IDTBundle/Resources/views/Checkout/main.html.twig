{% extends "::base.html.twig" %}

{% block title %}UniversalIDTBundle:Checkout:MyCart{% endblock %}

{% block body %}
    <form>
        <div id="my_cart">
            <h1>Welcome to the Checkout:MyCart page</h1>

            <table border="1">
                <thead>
                <tr>
                    <th colspan="5">Cards</th>
                </tr>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Denom.</th>
                    <th>Subtitle</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for row in data %}
                    {% if row.type == "buy" %}
                    <tr>
                        <td>{{ row.product.name }}</td>
                        <td>{{ row.count }}</td>
                        <td>{{ row.denomination }}</td>
                        <td>{{ row.product.AllGeneralInformation }}</td>
                        <td>remove</td>
                    </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>

            <table border="1">
                <thead>
                <tr>
                    <th colspan="6">Charges</th>
                </tr>
                <tr>
                    <th>Item</th>
                    <th>Pin</th>
                    <th>Qty</th>
                    <th>Denom.</th>
                    <th>Subtitle</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for row in data %}
                    {% if row.type == "recharge" %}
                        <tr>
                            <td>{{ row.product.product.name }}</td>
                            <td>{{ row.product.pin }}</td>
                            <td>{{ row.count }}</td>
                            <td>{{ row.denomination }}</td>
                            <td>{{ row.product.product.AllGeneralInformation }}</td>
                            <td>remove</td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>

            <a href="#" onclick="$('#my_cart').hide();$('#delivery').show();">continue to delivery method</a>
        </div>
        <div id="delivery" style="display: none">
            <h1>Welcome to the Checkout:Delivery page</h1>

            <input type="checkbox"/> Email <br>
            <a href="#" onclick="$('#delivery').hide();$('#payment').show();">continue to payment method</a>
        </div>
        <div id="payment" style="display: none">
            <h1>Welcome to the Checkout:Payment page</h1>

            <input type="checkbox"/> credit cards <br>
            <input type="checkbox"/> sofrt <br>
            <input type="submit" value="complete payment"/>
        </div>
    </form>
{% endblock %}