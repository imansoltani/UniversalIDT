{% extends '@UniversalIDT/WebPage/layout.html.twig' %}

{% block title %}{{ 'error_page.title'|trans({'%error%':status_code},'application') }}{% endblock %}

{% block content %}
    <div class="error-section clearfix" id="error">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="error-container">
                        <h1>{{ 'error_page.h1'|trans({},'application') }}</h1>
                        <h2>{{ status_code }} {{ status_text }}</h2>
                        <div class="error-details">
                            {{ 'error_page.paragraph'|trans({},'application') }}
                        </div> <!-- /error-details -->
                        <div class="error-actions">
                            <a href="{{ path('WebPage_main') }}" class="btn btn-primary btn-lg">
                                <i class="icon-chevron-left"></i> {{ 'error_page.dashboard_btn'|trans({},'application') }}
                            </a>
                            <a href="{{ path('WebPage_main')~ '#contact' }}" class="btn btn-default btn-lg">
                                <i class="icon-envelope"></i> {{ 'error_page.contact_btn'|trans({},'application') }}
                            </a>
                        </div> <!-- /error-actions -->
                    </div> <!-- /error-container -->
                </div> <!-- /span12 -->
            </div> <!-- /row -->
        </div> <!-- /container -->
    </div>
{% endblock content %}