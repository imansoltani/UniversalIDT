{% extends '@UniversalIDT/WebPage/layout.html.twig' %}

{% block title %}Universal IDT | Error {{ status_code }}{% endblock %}

{% block content %}
    <div class="error-section clearfix" id="error">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="error-container">
                        <h1>Oops!</h1>
                        <h2>{{ status_code }} {{ status_text }}</h2>
                        <div class="error-details">
                            Sorry, an error has occurred!
                        </div> <!-- /error-details -->
                        <div class="error-actions">
                            <a href="{{ path('WebPage_main') }}" class="btn btn-primary btn-lg">
                                <i class="icon-chevron-left"></i> Back to Dashboard
                            </a>
                            <a href="{{ path('WebPage_main')~ '#contact' }}" class="btn btn-default btn-lg">
                                <i class="icon-envelope"></i> Contact Support
                            </a>
                        </div> <!-- /error-actions -->
                    </div> <!-- /error-container -->
                </div> <!-- /span12 -->
            </div> <!-- /row -->
        </div> <!-- /container -->
    </div>
{% endblock content %}