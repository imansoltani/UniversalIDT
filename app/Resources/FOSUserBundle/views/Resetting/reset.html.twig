{% extends "@UniversalIDT/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subtitle %}
    Resetting Request
{% endblock subtitle %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-book"></i>
                <h3>Resetting Request</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-horizontal col-md-7">
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        {{ form_rest(form) }}

                        <div class="form-group">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!-- /widget-content -->

        </div>
        <!-- /widget -->
    </div>
</div>
{% endblock %}