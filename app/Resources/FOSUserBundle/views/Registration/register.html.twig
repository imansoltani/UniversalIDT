{% extends "@UniversalIDT/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subtitle %}
    Registering
{% endblock subtitle %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-book"></i>
                <h3>Registering</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal col-md-7">
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.firstName, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.firstName) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.lastName, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.email, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.language, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.language) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.country, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.country) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.gender, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.gender) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        <div class="form-group">
                            {{ form_label(form.phone, "", {'label_attr': {'class': 'col-lg-4'} }) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.phone) }}
                            </div> <!-- /col-lg-8 -->
                        </div> <!-- /form-group -->

                        {{ form_rest(form) }}

                        <div class="form-group">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <!-- /widget-content -->

        </div>
        <!-- /widget -->
    </div>
</div>
{% endblock %}