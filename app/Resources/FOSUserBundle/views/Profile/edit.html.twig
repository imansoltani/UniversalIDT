{% extends '@UniversalIDT/layout.html.twig' %}

{% block subtitle %}
    {{ 'settings.profile.title'|trans({},'application') }}
{% endblock subtitle %}

{% block content %}
    <div class="content-container clearfix">
        <div class="main-content clearfix"><!-- MAIN CONTENT -->
            <h2 class="section-title">{{ 'settings.profile.subtitle'|trans({},'application') }}</h2>
            <div class="user-panel clearfix"><!-- USER PANEL -->
                <ul class="nav nav-tabs">
                    <li class="active"><a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-user"></i> {{ 'settings.profile.subtitle'|trans({},'application') }}</a></li>
                    <li><a href="{{ path('user_profile_email') }}"><i class="fa fa-envelope"></i> {{ 'settings.email.subtitle'|trans({},'application') }}</a></li>
                    <li><a href="{{ path('fos_user_change_password') }}"><i class="fa fa-key"></i> {{ 'settings.password.subtitle'|trans({},'application') }}</a></li>
                    <li><a href="{{ path('user_profile_notification') }}"><i class="fa fa-exclamation-circle"></i> {{ 'settings.notifications.subtitle'|trans({},'application') }}</a></li>
                </ul>
                <div class="tab-content clearfix">
                    <div class="tab-pane active">
                        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="profile-setting-form fos_user_profile_edit form-horizontal">
                            <div class="form-group">
                                {{ form_label(form.firstName, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.firstName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.lastName, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.lastName) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.country, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.country) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.language, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.language) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.gender, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.gender) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.phone, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.phone) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.current_password, "", {'label_attr': {'class': 'col-md-3'} }) }}
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.current_password) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                                </div>
                            </div>
                            {{ form_rest(form) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}